<%= form_for(@appointment) do |f| %>
  <% if @appointment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@appointment.errors.count, "error") %> prohibited this appointment from being saved:</h2>

      <ul>
      <% @appointment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :date %><br />
    <%= f.date_select :date %>
  </div>
  <div class="field">
    <%= f.label :starttime %><br />
    <%= f.time_select :starttime, :ampm => true, :ignore_date => true %>
  </div>
  <div class="field">
    <%= f.label :endtime %><br />
    <%= f.time_select :endtime, :ampm => true, :ignore_date => true %>
  </div>
  <div class="field">
    <%= f.label :user_id %><br />
    <%= f.select :user_id, available_users %><br />
    <%= link_to "Add a New User", new_user_path %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
